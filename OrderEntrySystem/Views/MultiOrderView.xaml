<UserControl x:Class="OrderEntrySystem.MultiOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderEntrySystem"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <ResourceDictionary Source="SharedResources.xaml"/>
    </UserControl.Resources>

    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Bottom">
                <local:SelectedItemsView />
            </Grid>
            <ListView ItemContainerStyle="{StaticResource ResourceKey=ListViewStyle}" ItemsSource="{Binding Path=AllOrders}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Order Status" Width="auto" DisplayMemberBinding="{Binding Path=OrderStatus}" />
                        <GridViewColumn Header="Customer" Width="auto" DisplayMemberBinding="{Binding Path=Customer}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

    </Grid>

</UserControl>
