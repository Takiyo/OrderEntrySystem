<UserControl x:Class="OrderEntrySystem.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderEntrySystem"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="SharedResources.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Order status:" HorizontalAlignment="Right" Target="{Binding ElementName=statusComboBox}" />
            <ComboBox x:Name="statusComboBox" Grid.Row="0" Grid.Column="2" ItemsSource="{Binding Path=OrderStatuses}" SelectedItem="{Binding Path=Status}" />
            <Label Grid.Row="2" Grid.Column="0" Content="Shipping" HorizontalAlignment="Right" Target="{Binding ElementName=shippingTextBox}" />
            <TextBox x:Name="shippingTextBox" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right" Text="{Binding Path=ShippingAmount}" Width="200"/>
            <Label Grid.Row="4" Grid.Column="0" Content="Total" HorizontalAlignment="Right" Target="{Binding ElementName=totalTextBox}" />
            <TextBox x:Name="totalTextBox" IsEnabled="False" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Right" Text="{Binding Path=Total, Mode=OneWay}" Height="26" VerticalAlignment="Top" Width="200"/>
            <local:MultiOrderLineView Grid.Row="6" Grid.Column="2" DataContext="{Binding Path=FilteredLineViewModel}" />
        </Grid>
        <ContentControl Grid.Row="1" Content="{Binding Path=Commands}" ContentTemplate="{StaticResource NestedCommandTemplate}" VerticalAlignment="Bottom" Margin="0,0,4,4" />
    </Grid>
</UserControl>
