<Window x:Class="OrderEntrySystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderEntrySystem"
        mc:Ignorable="d"
        Title="{Binding Path=DisplayName}" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="SharedResources.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="379*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Width="100" Grid.RowSpan="2">
            <HeaderedContentControl Content="{Binding Commands}" ContentTemplate="{StaticResource CommandsTemplate}" Style="{StaticResource MainHeaderStyle}" Header="Tasks"/>
        </Border>

        <Border Grid.Column="2" Grid.RowSpan="2">
            <HeaderedContentControl Style="{StaticResource MainHeaderStyle}" Header="Workspaces" Content="{Binding Path=ViewModels}" ContentTemplate="{StaticResource WorkspacesTemplate}" />
        </Border>

    </Grid>
</Window>
